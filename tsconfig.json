{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "declaration": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "downlevelIteration": true,
  },
  "include": [
    "src"
  ]
}